<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="entities.Persona" table="personas">
	<id name="id" type="integer" column="id">
		<generator class="identity"></generator>
	</id>
	<property name="nombre" column="nombre" type="varchar" length="50"/>
	<property name="edad" column="edad" type="integer"/>
	<property name="fechaNacimiento" column="fecha_nacimiento" type="Date"/>
</class>

</hibernate-mapping>
	